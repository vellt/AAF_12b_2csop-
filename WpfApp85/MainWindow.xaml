<Window x:Class="WpfApp85.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp85"
        mc:Ignorable="d" Icon="images/dino.ico"
        Title="Dino" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="./images/back.jpg"/>
        </Grid.Background>
        
        <!--Első sor-->
        <ComboBox Name="dinoTallozo" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" 
                  Width="300" Margin="10" FontSize="20" FontWeight="Bold"
                  Foreground="Green"/>

        <!--Második sor-->
        <Grid Grid.Row="1" Grid.Column="0" Background="Green" Margin="10">
            <Image Source="images/pic_large_allosaurus.gif" 
                   Stretch="UniformToFill" Margin="5"/>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="1" Background="Green" Margin="10">
            <ScrollViewer>
                <TextBlock Text="szöveg..." FontSize="18" Foreground="White" Margin="5"/>
            </ScrollViewer>
        </Grid>

        <!--harmadik sor-->
        <Button Grid.Row="2" Grid.Column="0" Margin="10" Content="Előző"
                FontWeight="Bold" FontSize="20" Background="Green" 
                Foreground="White" />
        
        <Button Grid.Row="2" Grid.Column="1" Margin="10" Content="Következő"
                FontWeight="Bold" FontSize="20" Background="Green" 
                Foreground="White" />
    </Grid>
</Window>
