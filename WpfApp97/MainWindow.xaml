<Window x:Class="WpfApp97.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp97"
        mc:Ignorable="d" Icon="./images/favicon.ico"
        Title="Harry Potter karakterek" Height="600" Width="800"
        BorderThickness="5" BorderBrush="Orange">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        
        <!--első sor-->
        <ComboBox Name="cb" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                  Height="50" Width="300" FontSize="30"/>
        
        <!--második sor-->
        <Image Grid.Row="1" Grid.Column="0" Margin="20" Stretch="UniformToFill"
               Source="https://cdn3.pixelcut.app/7/20/uncrop_hero_bdf08a8ca6.jpg"/>

        <StackPanel Grid.Row="1" Grid.Column="1" Margin="20"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <TextBlock Name="nev" Text="Ron Weasley" FontSize="40" FontWeight="Bold"/>
            <TextBlock Name="haz" Text="Ház: Griffendél" FontSize="30"/>
            <TextBlock Name="ev" Text="Születési év: 1980" FontSize="30"/>
            <GroupBox Header="Erősség" FontSize="20" BorderThickness="3"
                      BorderBrush="Orange">
                <StackPanel Name="erosseg" Orientation="Horizontal">
                    <Image Source="./images/strong.png" Width="40" Margin="5"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </Grid>
</Window>
